# ===================================
# 农产品跨境贸易云平台 - 环境配置示例
# 毕业设计版本（简化配置）
# ===================================

# ===================================
# 数据库配置
# ===================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=agri_trade
DB_USERNAME=root
DB_PASSWORD=your_mysql_password

# ===================================
# JWT配置
# ===================================
JWT_SECRET=agri-trade-secret-key-for-graduation-project
JWT_EXPIRATION=86400

# ===================================
# 应用配置
# ===================================
APP_NAME=农产品跨境贸易云平台
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# 前端配置
FRONTEND_URL=http://localhost:3000

# ===================================
# 文件上传配置
# ===================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ===================================
# 日志配置
# ===================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application.log

# ===================================
# 安全配置
# ===================================
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
